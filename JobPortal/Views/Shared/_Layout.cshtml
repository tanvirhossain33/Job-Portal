@using JobPortal.Models

@{

    dynamic seeker = Session["user"] as Seeker;

    dynamic employer = Session["user"] as Employer;
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Job Portal</title>

    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet"/>
    <link href="~/Content/bootstrap-datepicker.min.css" rel="stylesheet"/>

    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet"/>

    <link href="~/Content/material.min.css" rel="stylesheet" />
    <link href="~/Content/dataTables.material.min.css" rel="stylesheet"/>

    
    



    <style>
        .field-validation-error {
            color: red;
        }

        th, td {
            text-align: center;
        }

    </style>

    

</head>




<body>

    <nav class="navbar navbar-primary navbar-fixed-top bs-docs-nav" role="banner">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Job Portal", "Index", "Home", null, new { @class = "navbar-brand" })
                
               
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav" style="font-size: 14px">

                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("All Jobs", "ViewAllPostedJobs", "Job")</li>
                    
                    

                    @if (seeker == null && employer == null)
                    {
                        <li>@Html.ActionLink("Create Seeker Account", "SeekerAccount", "CreateAccount")</li>
                        <li>@Html.ActionLink("Create Employer Account", "EmployerAccount", "CreateAccount")</li>
                        <li>@Html.ActionLink("Login", "LoginAccount", "Login")</li>
                        
                    }
                    else if (seeker != null && employer == null)
                    {
                        <li>@Html.ActionLink("Manage Resume", "ManageResume", "Seeker")</li>
                        <li>@Html.ActionLink("Applied Jobs", "SeekerAppliedJobs", "Job")</li>
                        <li>@Html.ActionLink("Send Email", "SendMail", "Email")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                        
                    }
                    else if (seeker == null && employer != null)
                    {
                        <li>@Html.ActionLink("Post Job", "EmployerJobPost", "Job")</li>
                        <li>@Html.ActionLink("Your Posted Jobs", "ViewEmployerPostedJobs", "Job")</li>
                        <li>@Html.ActionLink("Send Email", "SendMail", "Email")</li>
                        <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                    }
                    


                    

                </ul>


                <ul class="nav navbar-nav navbar-right" style="font-size: 14px">
                    @if (employer != null || seeker != null)
                    {
                        <li>@Html.ActionLink("Settings","Index","Settings")</li>
                    }
                    

                </ul>
            </div>
        </div>
    </nav>





    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
           
            <p>&copy;  Job Portal - All Rights Reserved.</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-3.1.0.min.js"></script>

    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("scripts", required: false)

</body>
</html>