@using System.Globalization
@model JobPortal.Models.AppliedJob

@{
    ViewBag.Title = "ApplyJob";
    dynamic message = ViewBag.message;
    dynamic jobInfo = ViewBag.jobInfo;
}

<h3>Apply Job</h3>
<h4>Job Title : @jobInfo[0].JobTitle</h4>
<h4>Application Deadline : @jobInfo[0].ApplicationDeadline.ToString("dd/M/yyyy", CultureInfo.InvariantCulture)</h4>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>AppliedJob</h4>
        <hr />
        @Html.ValidationSummary(true)

        @if (!message.Equals("Applied Successfully"))
        {
            <label style="color: red">
                @message
            </label>
        }
        else
        {
            <label style="color: blue">
                @message
            </label>
        }

        <div class="form-group">
            @Html.LabelFor(model => model.CoverLetter, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.CoverLetter, new { @class = "form-control", cols = 100, @rows = 5 } )
                @Html.ValidationMessageFor(model => model.CoverLetter)
                
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="mySubmitButton" value="Apply" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "ViewAllPostedJobs", "Job")
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

   
}

